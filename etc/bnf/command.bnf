{
    tokens = [
        DOLLAR = '$'
        AT = '@'
    ]
}

input ::=
    input-element*

private input-element ::=
     whitespace
  |  token

private token ::=
   command-parameter

//private new-line-character ::=
//     'regexp:[\u000D\u000A]|\u000D\u000A'
//
///* B.1.3 White space */
//
private whitespace ::=
    'regexp:[\p{Zs}\p{Zl}\p{Zp}\u0009\u000B\u000C]'
  | '`' new-line-character

