/* B.1.8 Parameters */

//command-parameter ::=
//    'regexp:[-\u2013\u2014\u2015][\p{Lu}\p{Ll}\p{Lt}\p{Lm}\p{Lo}_?][^{}();:,.|&\[\s]+'

command-parameter ::=
    parameter-chars*
//    parameter-chars* ':'?

parameter-chars ::=
    'regexp:[-\u2013\u2014\u2015][\p{Lu}\p{Ll}\p{Lt}\p{Lm}\p{Lo}_?]\w+'

